    "node": ">=16.0.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-mysql-session": "^3.0.3",
    "express-session": "^1.18.2",
    "multer": "^2.0.2",
    "mysql2": "^3.14.2",
    "pm2": "^6.0.8",
    "qrcode": "^1.5.4"
