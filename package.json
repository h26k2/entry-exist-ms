{
  "name": "entry-exist-ms",
  "version": "1.0.0",
  "description": "Production-ready Entry/Exit Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:tool:pwd": "node tools/generate-admin-password.js",
    "setup:db": "node scripts/setup-database.js",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/css/tailwind.css --watch",
    "build:css:prod": "npx tailwindcss -i ./src/input.css -o ./public/css/tailwind.css --minify",
    "update:tailwind": "node scripts/update-tailwind-references.js",
    "add:favicon": "node scripts/add-favicon.js",
    "use:bull-logo": "node scripts/update-favicon-to-bull.js"
  },
  "keywords": [
    "entry-management",
    "access-control",
    "security",
    "mysql",
    "nodejs",
    "express"
