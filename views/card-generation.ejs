<%- include('partials/header', { title: 'Card Generation' }) %> <%-
include('partials/sidebar') %>

<div class="main-content p-6">
  <h1 class="text-2xl font-bold mb-4">Generate Entry Card</h1>
  <form
    id="card-generation-form"
    class="bg-white rounded-lg shadow-md p-6 max-w-lg"
  >
    <div class="mb-4">
      <label for="cnic" class="block text-gray-700 font-semibold mb-2"
        >CNIC</label
      >
      <input
        type="text"
        id="cnic"
        name="cnic"
        class="form-input w-full"
        placeholder="Enter CNIC"
        required
      />
    </div>
    <div class="mb-4">
      <label for="name" class="block text-gray-700 font-semibold mb-2"
        >Name</label
      >
      <input
        type="text"
        id="name"
        name="name"
        class="form-input w-full"
        placeholder="Enter Name"
        required
      />
    </div>
    <div class="mb-4">
      <label for="card_number" class="block text-gray-700 font-semibold mb-2"
        >Card Number</label
      >
      <input
        type="text"
        id="card_number"
        name="card_number"
        class="form-input w-full"
        placeholder="Auto-generated"
        readonly
      />
    </div>
    <div class="mb-4">
      <label
        for="card_issued_date"
        class="block text-gray-700 font-semibold mb-2"
        >Issued Date</label
      >
      <input
        type="text"
        id="card_issued_date"
        name="card_issued_date"
        class="form-input w-full"
        readonly
      />
    </div>
    <button
      type="submit"
      class="btn btn-primary w-full flex items-center justify-center gap-2"
    >
      <i class="fas fa-id-card"></i> Generate Card
    </button>
    <div id="card-generation-message" class="mt-4 text-center"></div>
  </form>
</div>

<%- include('partials/footer') %>
<script src="/js/card-generation.js"></script>
