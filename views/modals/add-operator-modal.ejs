<!-- Add Operator Modal -->
<div
  id="add-operator-modal"
  class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4"
>
  <div
    class="bg-white rounded-xl lg:rounded-2xl shadow-xl max-w-md w-full max-h-screen overflow-y-auto"
  >
    <div class="p-4 lg:p-6">
      <div class="flex items-center justify-between mb-4 lg:mb-6">
        <h2 class="text-lg lg:text-xl font-bold text-gray-900">
          Add New Operator
        </h2>
        <button
          id="close-add-modal"
          class="text-gray-400 hover:text-gray-600 transition-colors p-1"
        >
          <i class="fas fa-times text-lg lg:text-xl"></i>
        </button>
      </div>

      <form
        id="add-operator-form"
        action="/dashboard/operator/add"
        method="POST"
        class="space-y-4 lg:space-y-6"
      >
        <div>
          <label
            for="add-name"
            class="block text-sm font-semibold text-gray-700 mb-2"
          >
            <i class="fas fa-user mr-2 text-blue-600"></i>Full Name*
          </label>
          <input
            type="text"
            id="add-name"
            name="name"
            placeholder="Enter full name"
            required
            class="w-full px-3 lg:px-4 py-2 lg:py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-sm lg:text-base"
          />
        </div>

        <div>
          <label
            for="add-cnic"
            class="block text-sm font-semibold text-gray-700 mb-2"
          >
            <i class="fas fa-id-card mr-2 text-blue-600"></i>CNIC Number*
          </label>
          <input
            type="text"
            id="add-cnic"
            name="cnic"
            placeholder="Enter 13-digit CNIC number"
            pattern="\d{13}"
            maxlength="13"
            required
            class="w-full px-3 lg:px-4 py-2 lg:py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 font-mono text-sm lg:text-base"
          />
          <p class="mt-1 text-xs text-gray-500">
            Format: 1234567890123 (without dashes)
          </p>
        </div>

        <div>
          <label
            for="add-password"
            class="block text-sm font-semibold text-gray-700 mb-2"
          >
            <i class="fas fa-lock mr-2 text-blue-600"></i>Default Password*
          </label>
          <input
            type="password"
            id="add-password"
            name="password"
            placeholder="Enter default password"
            required
            class="w-full px-3 lg:px-4 py-2 lg:py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-sm lg:text-base"
          />
        </div>

        <div
          class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-3 pt-4"
        >
          <button
            type="submit"
            class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 lg:py-3 px-4 rounded-lg transition-colors duration-200 text-sm lg:text-base"
          >
            <i class="fas fa-plus mr-2"></i>Add Operator
          </button>
          <button
            type="button"
            id="close-add-modal-btn"
            class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-700 font-semibold py-2 lg:py-3 px-4 rounded-lg transition-colors duration-200 text-sm lg:text-base"
          >
            Cancel
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
