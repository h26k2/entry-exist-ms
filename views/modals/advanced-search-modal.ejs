<!-- Advanced Search Modal -->
<div
  id="advancedSearchModal"
  class="fixed inset-0 bg-black bg-opacity-60 hidden items-center justify-center z-50 backdrop-blur-sm modal-overlay"
>
  <div
    class="bg-white rounded-3xl shadow-2xl max-w-5xl w-full mx-4 max-h-[95vh] overflow-hidden modal-container"
  >
    <!-- Modal Header -->
    <div
      class="bg-gradient-to-r from-indigo-50 to-blue-50 px-8 py-6 border-b border-indigo-100"
    >
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div
            class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-blue-600 rounded-2xl flex items-center justify-center shadow-lg"
          >
            <i class="fas fa-search-plus text-white text-lg"></i>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-gray-900">Advanced Search</h2>
            <p class="text-sm text-gray-600">
              Search people with multiple criteria and filters
            </p>
          </div>
        </div>
        <button
          onclick="closeAdvancedSearchModal()"
          class="text-gray-400 hover:text-gray-600 transition-colors p-2 hover:bg-white hover:bg-opacity-50 rounded-xl"
        >
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
    </div>

    <!-- Modal Body -->
    <div class="modal-body p-8 overflow-y-auto max-h-[80vh]">
      <!-- Search Criteria -->
      <div class="space-y-6 mb-8">
        <!-- Basic Search -->
        <div
          class="bg-gradient-to-r from-gray-50 to-slate-50 rounded-xl p-6 border border-gray-200"
        >
          <h4 class="font-semibold text-gray-900 mb-4 flex items-center">
            <i class="fas fa-search mr-2 text-gray-600"></i>Basic Search
          </h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="form-group">
              <label class="form-label">Search Query</label>
              <input
                type="text"
                id="advSearchQuery"
                placeholder="Name, CNIC, Phone..."
                class="form-input"
              />
            </div>
            <div class="form-group">
              <label class="form-label">Category</label>
              <select id="advSearchCategory" class="form-select">
                <option value="">All Categories</option>
                <% categories.forEach(category => { %>
                <option value="<%= category.id %>"><%= category.name %></option>
                <% }) %>
              </select>
            </div>
          </div>
        </div>

        <!-- Date Range -->
        <div
          class="bg-gradient-to-r from-blue-50 to-cyan-50 rounded-xl p-6 border border-blue-200"
        >
          <h4 class="font-semibold text-blue-900 mb-4 flex items-center">
            <i class="fas fa-calendar-alt mr-2 text-blue-600"></i>Registration
            Date Range
          </h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="form-group">
              <label class="form-label">Registration From</label>
              <input
                type="date"
                id="advSearchRegistrationStart"
                class="form-input"
              />
            </div>
            <div class="form-group">
              <label class="form-label">Registration To</label>
              <input
                type="date"
                id="advSearchRegistrationEnd"
                class="form-input"
              />
            </div>
          </div>
        </div>

        <!-- Advanced Filters -->
        <div
          class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-xl p-6 border border-purple-200"
        >
          <h4 class="font-semibold text-purple-900 mb-4 flex items-center">
            <i class="fas fa-filter mr-2 text-purple-600"></i>Advanced Filters
          </h4>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="flex items-center">
              <input
                type="checkbox"
                id="advSearchFamilyMembers"
                class="form-checkbox mr-3"
              />
              <label class="form-label-sm cursor-pointer"
                >Include Family Members</label
              >
            </div>
            <div class="flex items-center">
              <input
                type="checkbox"
                id="advSearchWithCards"
                class="form-checkbox mr-3"
              />
              <label class="form-label-sm cursor-pointer"
                >Only people with cards</label
              >
            </div>
            <div class="flex items-center">
              <input
                type="checkbox"
                id="advSearchWithoutCards"
                class="form-checkbox mr-3"
              />
              <label class="form-label-sm cursor-pointer"
                >Only people without cards</label
              >
            </div>
          </div>
        </div>
      </div>

      <!-- Search Actions -->
      <div class="flex space-x-4 mb-6">
        <button
          onclick="performAdvancedSearch()"
          class="btn btn-primary flex-1"
        >
          <i class="fas fa-search mr-2"></i>Search
        </button>
        <button onclick="clearAdvancedSearch()" class="btn btn-secondary">
          <i class="fas fa-broom mr-2"></i>Clear
        </button>
      </div>

      <!-- Search Results -->
      <div
        id="advancedSearchResults"
        class="bg-gray-50 rounded-xl p-6 min-h-[200px]"
      >
        <div class="text-center text-gray-500 py-8">
          <i class="fas fa-search text-4xl mb-4 opacity-50"></i>
          <p class="text-lg font-medium">No search performed yet</p>
          <p class="text-sm">Use the filters above to search for people</p>
        </div>
      </div>
    </div>

    <!-- Modal Footer -->
    <div class="modal-footer bg-gray-50 px-8 py-4 border-t border-gray-200">
      <div class="flex justify-end">
        <button
          type="button"
          onclick="closeAdvancedSearchModal()"
          class="btn btn-secondary"
        >
          <i class="fas fa-times mr-2"></i>Close
        </button>
      </div>
    </div>
  </div>
</div>
