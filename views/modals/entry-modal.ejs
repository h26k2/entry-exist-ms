<%- include('../partials/enhanced-modal') %>
<!-- Enhanced Entry Modal -->
<div
  id="entryModal"
  class="fixed inset-0 bg-black bg-opacity-60 hidden flex items-center justify-center z-50 backdrop-blur-sm modal-overlay"
>
  <div
    class="bg-white rounded-3xl shadow-2xl max-w-3xl w-full mx-4 max-h-[95vh] overflow-hidden modal-container modal-lg"
  >
    <!-- Modal Header -->
    <div
      class="bg-gradient-to-r from-blue-50 to-indigo-50 px-8 py-6 border-b border-blue-100"
    >
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div
            class="w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center shadow-lg"
          >
            <i class="fas fa-sign-in-alt text-white text-lg"></i>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-gray-900">New Entry</h2>
            <p class="text-sm text-gray-600">Process new person entry</p>
          </div>
        </div>
        <button
          type="button"
          onclick="closeEntryModal()"
          class="text-gray-400 hover:text-gray-600 transition-colors p-2 hover:bg-white hover:bg-opacity-50 rounded-xl"
        >
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
    </div>

    <!-- Modal Body -->
    <div class="modal-body p-8 max-h-[70vh] overflow-y-auto">
      <form id="entryForm" class="space-y-8">
        <input type="hidden" id="entryPersonId" name="person_id" />

        <!-- Person Selection Section -->
        <div
          class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-6 border-2 border-blue-200"
        >
          <div class="flex items-center space-x-3 mb-6">
            <div
              class="w-10 h-10 bg-blue-500 rounded-xl flex items-center justify-center"
            >
              <i class="fas fa-user-search text-white"></i>
            </div>
            <h3 class="font-bold text-blue-900 text-lg">Select Person</h3>
          </div>

          <!-- Selected Person Display -->
          <div
            id="entryPersonDetails"
            class="bg-blue-100 border-2 border-blue-300 rounded-xl p-4 mb-4 hidden"
          >
            <div class="flex items-center gap-3">
              <i class="fas fa-check-circle text-blue-600"></i>
              <span class="font-bold text-blue-900">Selected:</span>
              <span
                id="entryPersonName"
                class="font-semibold text-gray-800"
              ></span>
              <span id="entryPersonCnic" class="text-gray-600 font-mono"></span>
              <span
                id="entryPersonCategory"
                class="px-2 py-1 bg-purple-100 text-purple-700 rounded-lg text-xs font-medium"
              ></span>
              <span
                id="entryPersonBalance"
                class="px-2 py-1 bg-green-100 text-green-700 rounded-lg text-xs font-medium"
              ></span>
            </div>
            <button
              type="button"
              onclick="clearSelectedPerson('entry')"
              class="mt-2 text-red-600 hover:text-red-800 text-sm"
            >
              <i class="fas fa-times mr-1"></i>Change Person
            </button>
          </div>

          <!-- Person Search -->
          <div class="form-group">
            <label class="form-label"
              >Search Person <span class="text-red-500">*</span></label
            >
            <div class="relative">
              <input
                type="text"
                id="entryPersonSearch"
                placeholder="Search by CNIC or name..."
                class="form-input !pl-10"
                autocomplete="off"
              />
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center">
                <i class="fas fa-search text-gray-400"></i>
              </div>
              <div
                id="entryPersonSearchSpinner"
                class="absolute right-3 top-3 hidden"
              >
                <div
                  class="animate-spin rounded-full h-5 w-5 border-b-2 border-blue-500"
                ></div>
              </div>
            </div>
            <div id="entryPersonResults" class="mt-3"></div>
            <div
              id="entryPersonError"
              class="mt-2 text-red-600 text-sm hidden"
            ></div>
          </div>
        </div>

        <!-- Entry Details Section -->
        <div
          class="bg-gradient-to-r from-gray-50 to-slate-50 rounded-2xl p-6 border-2 border-gray-200"
        >
          <div class="flex items-center space-x-3 mb-6">
            <div
              class="w-10 h-10 bg-gray-500 rounded-xl flex items-center justify-center"
            >
              <i class="fas fa-clipboard-list text-white"></i>
            </div>
            <h3 class="font-bold text-gray-900 text-lg">Entry Details</h3>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Vehicle Information -->
            <div class="form-group">
              <label class="form-label">Vehicle Number</label>
              <input
                type="text"
                id="vehicleNumber"
                name="vehicle_number"
                class="form-input"
                placeholder="e.g., ABC-123"
              />
              <p class="text-xs text-gray-500 mt-1">
                Leave empty if no vehicle
              </p>
            </div>

            <!-- Guest Count -->
            <div class="form-group">
              <label class="form-label"
                >Number of People <span class="text-red-500">*</span></label
              >
              <input
                type="number"
                id="guestCount"
                name="guest_count"
                class="form-input"
                value="1"
                min="1"
                max="20"
                required
              />
              <p class="text-xs text-gray-500 mt-1">
                Including the main person
              </p>
            </div>
          </div>
        </div>

        <!-- Entry Options Section -->
        <div
          class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-2xl p-6 border-2 border-purple-200"
        >
          <div class="flex items-center space-x-3 mb-6">
            <div
              class="w-10 h-10 bg-purple-500 rounded-xl flex items-center justify-center"
            >
              <i class="fas fa-cog text-white"></i>
            </div>
            <h3 class="font-bold text-purple-900 text-lg">Entry Options</h3>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Stroller Option -->
            <div class="form-group">
              <label
                class="flex items-center cursor-pointer bg-white rounded-xl p-4 border-2 border-transparent hover:border-purple-300 transition-all"
              >
                <input
                  type="checkbox"
                  id="hasStroller"
                  name="has_stroller"
                  value="1"
                  class="form-checkbox mr-4"
                />
                <div class="flex items-center space-x-3">
                  <i class="fas fa-baby text-purple-600"></i>
                  <span class="font-semibold text-gray-700">Has Stroller</span>
                </div>
              </label>
            </div>

            <!-- Guest Option -->
            <div class="form-group">
              <label
                class="flex items-center cursor-pointer bg-white rounded-xl p-4 border-2 border-transparent hover:border-orange-300 transition-all"
              >
                <input
                  type="checkbox"
                  id="isGuest"
                  name="is_guest"
                  value="1"
                  class="form-checkbox mr-4"
                />
                <div class="flex items-center space-x-3">
                  <i class="fas fa-user-friends text-orange-600"></i>
                  <span class="font-semibold text-gray-700">Is Guest</span>
                </div>
              </label>
            </div>
          </div>

          <!-- Host Person Selection -->
          <div id="hostPersonSection" class="form-group mt-6 hidden">
            <label class="form-label"
              >Host Person <span class="text-red-500">*</span></label
            >
            <input type="hidden" id="hostPersonId" name="host_person_id" />

            <!-- Selected Host Display -->
            <div
              id="selectedHostDetails"
              class="bg-orange-100 border-2 border-orange-300 rounded-xl p-4 mb-4 hidden"
            >
              <div class="flex items-center gap-3">
                <i class="fas fa-check-circle text-orange-600"></i>
                <span class="font-bold text-orange-900">Host:</span>
                <span
                  id="hostPersonName"
                  class="font-semibold text-gray-800"
                ></span>
                <span
                  id="hostPersonCnic"
                  class="text-gray-600 font-mono"
                ></span>
              </div>
              <button
                type="button"
                onclick="clearSelectedHost()"
                class="mt-2 text-red-600 hover:text-red-800 text-sm"
              >
                <i class="fas fa-times mr-1"></i>Change Host
              </button>
            </div>

            <div class="relative">
              <input
                type="text"
                id="hostPersonSearch"
                placeholder="Search host by CNIC or name..."
                class="form-input !pl-10"
                autocomplete="off"
              />
              <div class="absolute inset-y-0 left-0 pl-4 flex items-center">
                <i class="fas fa-search text-gray-400"></i>
              </div>
              <div
                id="hostPersonSearchSpinner"
                class="absolute right-3 top-3 hidden"
              >
                <div
                  class="animate-spin rounded-full h-5 w-5 border-b-2 border-orange-500"
                ></div>
              </div>
            </div>
            <div id="hostPersonResults" class="mt-3"></div>
            <div
              id="hostPersonError"
              class="mt-2 text-red-600 text-sm hidden"
            ></div>
          </div>
        </div>

        <!-- Facilities Selection Section -->
        <div
          class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl p-6 border-2 border-green-200"
        >
          <div class="flex items-center space-x-3 mb-6">
            <div
              class="w-10 h-10 bg-green-500 rounded-xl flex items-center justify-center"
            >
              <i class="fas fa-swimming-pool text-white"></i>
            </div>
            <h3 class="font-bold text-green-900 text-lg">Select Facilities</h3>
          </div>

          <div
            id="facilitiesList"
            class="grid grid-cols-1 md:grid-cols-2 gap-4"
          >
            <% if (typeof facilities !== 'undefined' && facilities.length > 0) {
            %> <% facilities.forEach(facility => { %>
            <div
              class="bg-white rounded-xl p-4 border-2 border-transparent hover:border-green-300 transition-all facility-item"
            >
              <label class="flex items-center cursor-pointer">
                <input
                  type="checkbox"
                  name="facilities[]"
                  value="<%= facility.id %>"
                  data-price="<%= facility.price %>"
                  data-name="<%= facility.name %>"
                  class="facility-checkbox form-checkbox mr-4"
                />
                <div class="flex-1">
                  <div class="flex items-center justify-between">
                    <span class="font-semibold text-gray-700"
                      ><%= facility.name %></span
                    >
                    <span class="text-green-600 font-bold"
                      >Rs. <%= facility.price %></span
                    >
                  </div>
                  <div class="flex items-center mt-2">
                    <span class="text-sm text-gray-500 mr-3">Quantity:</span>
                    <input
                      type="number"
                      class="facility-quantity w-20 px-2 py-1 border border-gray-300 rounded text-center"
                      value="1"
                      min="1"
                      max="10"
                      disabled
                    />
                  </div>
                </div>
              </label>
            </div>
            <% }) %> <% } else { %>
            <div class="col-span-2 text-center py-8 text-gray-500">
              <i class="fas fa-info-circle text-3xl mb-2"></i>
              <p>No facilities available</p>
            </div>
            <% } %>
          </div>
        </div>

        <!-- Payment Summary Section -->
        <div
          class="bg-gradient-to-r from-yellow-50 to-orange-50 rounded-2xl p-6 border-2 border-yellow-200"
        >
          <div class="flex items-center space-x-3 mb-4">
            <div
              class="w-10 h-10 bg-yellow-500 rounded-xl flex items-center justify-center"
            >
              <i class="fas fa-calculator text-white"></i>
            </div>
            <h3 class="font-bold text-yellow-900 text-lg">Payment Summary</h3>
          </div>

          <div class="bg-white rounded-xl p-4">
            <div class="space-y-2 mb-4">
              <div id="facilityBreakdown" class="space-y-1"></div>
            </div>
            <hr class="my-3" />
            <div class="flex justify-between items-center mb-2">
              <span class="text-lg font-semibold text-gray-700"
                >Total Amount:</span
              >
              <span class="text-2xl font-bold text-green-600"
                >Rs. <span id="totalAmount">0.00</span></span
              >
            </div>
            <div
              id="paymentNote"
              class="text-sm text-gray-600 italic bg-gray-50 p-2 rounded"
            ></div>
          </div>
        </div>

        <!-- Entry Remarks Section -->
        <div class="form-group">
          <label class="form-label">Entry Remarks</label>
          <textarea
            id="entryRemarks"
            name="entry_remarks"
            rows="3"
            class="form-textarea"
            placeholder="Any additional notes for this entry..."
          ></textarea>
        </div>
      </form>
    </div>

    <!-- Modal Footer -->
    <div class="modal-footer bg-gray-50 px-8 py-6 border-t border-gray-200">
      <div class="flex items-center justify-between">
        <div class="text-sm text-gray-600">
          <span class="text-red-500">*</span> Required fields
        </div>
        <div class="flex space-x-3">
          <button
            type="button"
            onclick="closeEntryModal()"
            class="btn btn-secondary"
            id="entryModalCancelBtn"
          >
            <i class="fas fa-times mr-2"></i>Cancel
          </button>
          <button
            type="submit"
            form="entryForm"
            class="btn btn-primary relative"
            id="processEntryBtn"
            disabled
          >
            <span id="entryBtnText">
              <i class="fas fa-sign-in-alt mr-2"></i>Process Entry
            </span>
            <span id="entryBtnLoading" class="hidden">
              <div
                class="animate-spin rounded-full h-4 w-4 border-b-2 border-white mr-2 inline-block"
              ></div>
              Processing...
            </span>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
