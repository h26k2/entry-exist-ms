<!-- Add Family Member Modal -->
<div
  id="familyMemberModal"
  class="fixed inset-0 bg-black bg-opacity-60 hidden items-center justify-center z-50 backdrop-blur-sm modal-overlay"
>
  <div
    class="bg-white rounded-3xl shadow-2xl max-w-3xl w-full mx-4 max-h-[95vh] overflow-hidden modal-container"
  >
    <!-- Modal Header -->
    <div
      class="bg-gradient-to-r from-purple-50 to-pink-50 px-8 py-6 border-b border-purple-100"
    >
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div
            class="w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-600 rounded-2xl flex items-center justify-center shadow-lg"
          >
            <i class="fas fa-user-friends text-white text-lg"></i>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-gray-900">Add Family Member</h2>
            <p class="text-sm text-gray-600">
              Add a new family member to this person
            </p>
          </div>
        </div>
        <button
          onclick="closeFamilyMemberModal()"
          class="text-gray-400 hover:text-gray-600 transition-colors p-2 hover:bg-white hover:bg-opacity-50 rounded-xl"
        >
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
    </div>

    <!-- Modal Body -->
    <div class="modal-body p-8 overflow-y-auto max-h-[80vh]">
      <form id="familyMemberForm" class="space-y-6">
        <input type="hidden" id="familyHostPersonId" />

        <!-- Host Information Display -->
        <div class="bg-purple-50 border border-purple-200 rounded-xl p-6 mb-6">
          <h4 class="font-semibold text-purple-900 mb-3 flex items-center">
            <i class="fas fa-user-tie mr-2"></i>Host Information
          </h4>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <p class="text-sm text-gray-600">Name:</p>
              <p class="font-medium text-purple-800" id="familyHostName">-</p>
            </div>
            <div>
              <p class="text-sm text-gray-600">CNIC:</p>
              <p
                class="font-medium text-purple-800 font-mono"
                id="familyHostCnic"
              >
                -
              </p>
            </div>
          </div>
        </div>

        <!-- Family Member Information -->
        <div
          class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-6 border-2 border-blue-200"
        >
          <h4 class="font-semibold text-blue-900 mb-4 flex items-center">
            <i class="fas fa-user-plus mr-2"></i>Family Member Details
          </h4>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="form-group">
              <label class="form-label">CNIC Number *</label>
              <input
                type="text"
                id="familyCnic"
                name="cnic"
                required
                class="form-input font-mono"
                placeholder="1234567890123"
                maxlength="13"
              />
            </div>
            <div class="form-group">
              <label class="form-label">Full Name *</label>
              <input
                type="text"
                id="familyName"
                name="name"
                required
                class="form-input"
                placeholder="Enter full name"
              />
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="form-group">
              <label class="form-label">Phone Number</label>
              <input
                type="tel"
                id="familyPhone"
                name="phone"
                class="form-input"
                placeholder="+92 300 1234567"
              />
            </div>
            <div class="form-group">
              <label class="form-label">Emergency Contact</label>
              <input
                type="tel"
                id="familyEmergencyContact"
                name="emergency_contact"
                class="form-input"
                placeholder="+92 300 1234567"
              />
            </div>
          </div>

          <div class="form-group">
            <label class="form-label">Remarks</label>
            <textarea
              id="familyRemarks"
              name="remarks"
              rows="3"
              class="form-textarea"
              placeholder="Any additional notes about this family member..."
            ></textarea>
          </div>
        </div>
      </form>
    </div>

    <!-- Modal Footer -->
    <div class="modal-footer bg-gray-50 px-8 py-6 border-t border-gray-200">
      <div class="flex justify-end space-x-3">
        <button
          type="button"
          onclick="closeFamilyMemberModal()"
          class="btn btn-secondary"
        >
          <i class="fas fa-times mr-2"></i>Cancel
        </button>
        <button type="submit" form="familyMemberForm" class="btn btn-primary">
          <i class="fas fa-user-plus mr-2"></i>Add Family Member
        </button>
      </div>
    </div>
  </div>
</div>
