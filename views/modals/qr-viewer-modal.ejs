<%- include('../partials/enhanced-modal') %>
<!-- QR Code Viewer Modal (Unified Design) -->
<div
  id="qrViewerModal"
  class="fixed inset-0 bg-black bg-opacity-60 hidden z-50 backdrop-blur-sm modal-overlay flex items-center justify-center"
>
  <div
    class="bg-white rounded-3xl shadow-2xl max-w-xl w-full mx-4 max-h-[95vh] overflow-hidden modal-container"
  >
    <!-- Modal Header -->
    <div
      class="bg-gradient-to-r from-purple-50 to-blue-50 px-8 py-6 border-b border-purple-100"
    >
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div
            class="w-12 h-12 bg-gradient-to-br from-purple-500 to-blue-600 rounded-2xl flex items-center justify-center shadow-lg"
          >
            <i class="fas fa-qrcode text-white text-lg"></i>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-gray-900">QR Code Viewer</h2>
            <p class="text-sm text-gray-600">View and download card QR code</p>
          </div>
        </div>
        <button
          id="closeQRViewer"
          class="text-gray-400 hover:text-gray-600 transition-colors p-2 hover:bg-white hover:bg-opacity-50 rounded-xl"
        >
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
    </div>
    <!-- Modal Body -->
    <div class="modal-body p-8 overflow-y-auto max-h-[70vh]">
      <div class="text-center">
        <img
          id="qrViewerImage"
          src=""
          alt="QR Code"
          class="mx-auto mb-4 max-w-full h-auto rounded-lg border-2 border-gray-200"
        />
        <p id="qrViewerCardNumber" class="text-sm text-gray-600 mb-4">Card:</p>
        <div class="flex space-x-3 justify-center">
          <button
            id="downloadQRFromViewer"
            class="btn btn-primary bg-purple-600 hover:bg-purple-700 text-white flex items-center gap-2"
          >
            <i class="fas fa-download"></i>Download
          </button>
          <button
            id="openQRInNewTab"
            class="btn btn-secondary bg-blue-600 hover:bg-blue-700 text-white flex items-center gap-2"
          >
            <i class="fas fa-external-link-alt"></i>Open
          </button>
        </div>
      </div>
    </div>
    <!-- Modal Footer -->
    <div
      class="modal-footer bg-gray-50 px-8 py-6 border-t border-gray-200 flex justify-end"
    >
      <button type="button" id="closeQRViewerFooter" class="btn btn-secondary">
        <i class="fas fa-times mr-2"></i>Close
      </button>
    </div>
  </div>
</div>
