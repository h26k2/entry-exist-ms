<%- include('../partials/enhanced-modal') %>
<!-- Unified Person Registration/Edit Modal -->
<div
  id="unifiedPersonModal"
  class="fixed inset-0 bg-black bg-opacity-60 hidden items-center justify-center z-50 backdrop-blur-sm modal-overlay"
>
  <div
    class="bg-white rounded-3xl shadow-2xl max-w-5xl w-full mx-4 max-h-[95vh] overflow-hidden modal-container modal-xl"
  >
    <!-- Modal Header -->
    <div
      class="bg-gradient-to-r from-blue-50 to-indigo-50 px-8 py-6 border-b border-blue-100"
    >
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div
            class="w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center shadow-lg"
          >
            <i
              id="unifiedPersonModalIcon"
              class="fas fa-user-plus text-white text-lg"
            ></i>
          </div>
          <div>
            <h2
              id="unifiedPersonModalTitle"
              class="text-2xl font-bold text-gray-900"
            >
              Add New Person
            </h2>
            <p id="unifiedPersonModalSubtitle" class="text-sm text-gray-600">
              Create a new person in the system
            </p>
          </div>
        </div>
        <button
          onclick="closeUnifiedPersonModal()"
          class="text-gray-400 hover:text-gray-600 transition-colors p-2 hover:bg-white hover:bg-opacity-50 rounded-xl"
        >
          <i class="fas fa-times text-xl"></i>
        </button>
      </div>
    </div>

    <!-- Modal Body -->
    <div class="modal-body p-8 overflow-y-auto max-h-[80vh]">
      <form id="unifiedPersonForm" class="space-y-8">
        <input type="hidden" id="unifiedPersonId" name="person_id" />
        <input type="hidden" id="unifiedPersonMode" value="add" />

        <!-- Personal Information Section -->
        <div
          class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-6 border-2 border-blue-200"
        >
          <div class="flex items-center space-x-3 mb-6">
            <div
              class="w-10 h-10 bg-blue-500 rounded-xl flex items-center justify-center"
            >
              <i class="fas fa-id-card text-white"></i>
            </div>
            <h3 class="font-bold text-blue-900 text-lg">
              Personal Information
            </h3>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="form-group">
              <label class="form-label">CNIC Number *</label>
              <input
                type="text"
                id="unifiedPersonCnic"
                name="cnic"
                required
                class="form-input font-mono"
                placeholder="1234567890123"
                maxlength="13"
              />
            </div>
            <div class="form-group">
              <label class="form-label">Full Name *</label>
              <input
                type="text"
                id="unifiedPersonName"
                name="name"
                required
                class="form-input"
                placeholder="Enter full name"
              />
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="form-group">
              <label class="form-label">Phone Number</label>
              <input
                type="tel"
                id="unifiedPersonPhone"
                name="phone"
                class="form-input"
                placeholder="+92 300 1234567"
              />
            </div>
            <div class="form-group">
              <label class="form-label">Category *</label>
              <select
                id="unifiedPersonCategory"
                name="category_id"
                required
                class="form-select"
              >
                <option value="">Select Category</option>
                <% if (typeof categories !== 'undefined') { %> <%
                categories.forEach(category => { %>
                <option value="<%= category.id %>"><%= category.name %></option>
                <% }) %> <% } %>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="form-label">Address</label>
            <textarea
              id="unifiedPersonAddress"
              name="address"
              rows="3"
              class="form-textarea"
              placeholder="Enter full address"
            ></textarea>
          </div>
        </div>

        <!-- Family Status Section -->
        <div
          class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-2xl p-6 border-2 border-purple-200"
        >
          <div class="flex items-center space-x-3 mb-6">
            <div
              class="w-10 h-10 bg-purple-500 rounded-xl flex items-center justify-center"
            >
              <i class="fas fa-users text-white"></i>
            </div>
            <h3 class="font-bold text-purple-900 text-lg">
              Family Information
            </h3>
          </div>

          <div class="form-group">
            <label
              class="flex items-center cursor-pointer bg-white rounded-xl p-4 border-2 border-transparent hover:border-purple-300 transition-all"
            >
              <input
                type="checkbox"
                id="unifiedPersonIsFamilyMember"
                name="is_family_member"
                value="1"
                class="form-checkbox mr-4"
              />
              <div class="flex items-center space-x-3">
                <i class="fas fa-home text-purple-600"></i>
                <span class="font-semibold text-gray-700"
                  >This is a family member</span
                >
              </div>
            </label>
          </div>

          <div
            id="unifiedPersonFamilyFields"
            class="form-group"
            style="display: none"
          >
            <label class="form-label">Host/Main Person</label>
            <div class="search-container">
              <input
                type="text"
                id="unifiedPersonHostSearch"
                placeholder="Search by CNIC/Name"
                class="form-input"
              />
              <div id="unifiedPersonHostResults" class="mt-2"></div>
            </div>
            <input
              type="hidden"
              id="unifiedPersonHostId"
              name="host_person_id"
            />
          </div>
        </div>

        <!-- Contact Information Section -->
        <div
          class="bg-gradient-to-r from-orange-50 to-red-50 rounded-2xl p-6 border-2 border-orange-200"
        >
          <div class="flex items-center space-x-3 mb-6">
            <div
              class="w-10 h-10 bg-orange-500 rounded-xl flex items-center justify-center"
            >
              <i class="fas fa-phone text-white"></i>
            </div>
            <h3 class="font-bold text-orange-900 text-lg">Emergency Contact</h3>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="form-group">
              <label class="form-label">Emergency Contact Number</label>
              <input
                type="tel"
                id="unifiedPersonEmergencyContact"
                name="emergency_contact"
                class="form-input"
                placeholder="+92 300 1234567"
              />
            </div>
            <div class="form-group">
              <label
                class="flex items-center cursor-pointer bg-white rounded-xl p-4 border-2 border-transparent hover:border-orange-300 transition-all"
              >
                <input
                  type="checkbox"
                  id="unifiedPersonGenerateCard"
                  name="generate_card"
                  value="1"
                  class="form-checkbox mr-4"
                />
                <div class="flex items-center space-x-3">
                  <i class="fas fa-id-card text-orange-600"></i>
                  <span class="font-semibold text-gray-700"
                    >Generate ID Card</span
                  >
                </div>
              </label>
            </div>
          </div>
        </div>

        <!-- Additional Information -->
        <div class="form-group">
          <label class="form-label">
            <i class="fas fa-comment mr-2 text-gray-600"></i>Remarks (Optional)
          </label>
          <textarea
            id="unifiedPersonRemarks"
            name="remarks"
            rows="3"
            class="form-textarea"
            placeholder="Any additional notes or comments..."
          ></textarea>
        </div>
      </form>
    </div>

    <!-- Enhanced Modal Footer -->
    <div class="modal-footer bg-gray-50 px-8 py-6 border-t border-gray-200">
      <button
        type="button"
        onclick="closeUnifiedPersonModal()"
        class="btn btn-secondary"
      >
        <i class="fas fa-times mr-2"></i>Cancel
      </button>
      <button
        type="submit"
        form="unifiedPersonForm"
        class="btn btn-primary"
        id="submitUnifiedPersonBtn"
      >
        <i class="fas fa-save mr-2"></i>Save Person
      </button>
    </div>
  </div>
</div>
