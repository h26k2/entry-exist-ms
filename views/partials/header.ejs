<div class="bg-white border-b border-gray-200 px-4 lg:px-6 py-4">
  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <!-- Mobile menu button -->
      <button
        onclick="toggleSidebar()"
        class="lg:hidden p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100 mr-2"
      >
        <i class="fas fa-bars text-lg"></i>
      </button>

      <div>
        <h1 class="text-xl lg:text-2xl font-bold text-gray-900">
          <%= title || 'Dashboard' %>
        </h1>
        <p class="text-xs lg:text-sm text-gray-500 mt-1">
          <script>
            document.write(
              new Date().toLocaleDateString("en-US", {
                weekday: "long",
                year: "numeric",
                month: "long",
                day: "numeric",
              })
            );
          </script>
        </p>
      </div>
    </div>

    <div class="flex items-center space-x-2 lg:space-x-4">
      <!-- Quick Stats -->
      <div class="hidden md:flex items-center space-x-2 lg:space-x-4 text-sm">
        <div class="bg-green-100 text-green-800 px-2 lg:px-3 py-1 rounded-full">
          <i class="fas fa-users mr-1"></i>
          <span id="header-occupancy">-</span> Inside
        </div>
        <div class="bg-blue-100 text-blue-800 px-2 lg:px-3 py-1 rounded-full">
          <i class="fas fa-clock mr-1"></i>
          <span id="current-time">--:--</span>
        </div>
      </div>

      <!-- Notifications -->
      <button
        class="relative p-2 text-gray-400 hover:text-gray-600 transition-colors"
      >
        <i class="fas fa-bell text-base lg:text-lg"></i>
        <span
          class="absolute top-0 right-0 w-2 h-2 bg-red-500 rounded-full"
        ></span>
      </button>
    </div>
  </div>
</div>

<script>
  // Update current time
  function updateTime() {
    const now = new Date();
    const timeString = now.toLocaleTimeString("en-US", {
      hour12: false,
      hour: "2-digit",
      minute: "2-digit",
    });
    const timeElement = document.getElementById("current-time");
    if (timeElement) {
      timeElement.textContent = timeString;
    }
  }

  // Update occupancy in header
  async function updateHeaderOccupancy() {
    try {
      const response = await fetch("/api/current-occupancy");
      const data = await response.json();
      if (data.success) {
        const occupancyElement = document.getElementById("header-occupancy");
        if (occupancyElement) {
          occupancyElement.textContent = data.totalCount;
        }
      }
    } catch (error) {
      console.error("Error updating header occupancy:", error);
    }
  }

  // Initialize
  updateTime();
  updateHeaderOccupancy();

  // Update time every minute
  setInterval(updateTime, 60000);

  // Update occupancy every 30 seconds
  setInterval(updateHeaderOccupancy, 30000);
</script>
