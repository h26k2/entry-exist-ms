<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Categories Management - Entry/Exit Management System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: "#1e40af",
              secondary: "#3b82f6",
              accent: "#06b6d4",
              dark: "#1f2937",
              light: "#f8fafc",
            },
          },
        },
      };
    </script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/global.css" />
  </head>
  <body
    class="bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 min-h-screen"
  >
    <div class="flex h-screen">
      <%- include('partials/sidebar') %>
      <main class="flex-1 overflow-y-auto lg:ml-0">
        <%- include('partials/header', { title: 'User Categories Management' })
        %>
        <div class="p-4 lg:p-6 animate-fade-in">
          <div class="mb-8 lg:mb-10">
            <div class="relative">
              <div
                class="absolute inset-0 bg-gradient-to-r from-blue-500/10 to-indigo-500/10 rounded-3xl transform -rotate-1"
              ></div>
              <div class="relative glass-card rounded-2xl p-6 lg:p-8">
                <div
                  class="flex flex-col lg:flex-row lg:items-center lg:justify-between"
                >
                  <div class="flex items-center gap-4 mb-4 lg:mb-0">
                    <div class="relative">
                      <div
                        class="p-3 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-xl text-white shadow-lg"
                      >
                        <i class="fas fa-users-cog text-xl"></i>
                      </div>
                      <div class="pulse-ring"></div>
                    </div>
                    <div>
                      <h1
                        class="text-3xl lg:text-4xl font-bold bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent"
                      >
                        User Categories Management
                      </h1>
                      <p class="text-gray-600 mt-2">
                        Manage all user categories dynamically.
                      </p>
                    </div>
                  </div>
                  <button class="btn btn-primary" id="openAddCategoryBtn">
                    <i class="fas fa-plus"></i> Add Category
                  </button>
                </div>
              </div>
            </div>
          </div>
          <div class="glass-card rounded-2xl p-6 lg:p-8">
            <div class="overflow-x-auto">
              <table class="min-w-full border-collapse rounded-xl shadow-sm">
                <thead>
                  <tr class="bg-gradient-to-r from-blue-100 to-indigo-100">
                    <th
                      class="px-6 py-3 text-left text-gray-700 font-bold rounded-tl-xl"
                    >
                      Name
                    </th>
                    <th class="px-6 py-3 text-left text-gray-700 font-bold">
                      Description
                    </th>
                    <th
                      class="px-6 py-3 text-left text-gray-700 font-bold rounded-tr-xl"
                    >
                      Actions
                    </th>
                  </tr>
                </thead>
                <tbody
                  id="userCategoriesTableBody"
                  class="divide-y divide-blue-50"
                >
                  <!-- Categories will be populated by JS -->
                </tbody>
              </table>
            </div>
            <style>
              #userCategoriesTableBody tr {
                transition: background 0.2s;
              }
              #userCategoriesTableBody tr:nth-child(even) {
                background-color: #f3f4f6;
              }
              #userCategoriesTableBody tr:hover {
                background-color: #e0e7ff;
              }
              #userCategoriesTableBody td {
                padding: 1rem 1.5rem;
                font-size: 1rem;
                color: #374151;
                vertical-align: middle;
              }
            </style>
          </div>
        </div>
      </main>
    </div>

    <!-- Modals -->
    <%- include('modals/add-user-category-modal') %> <%-
    include('modals/edit-user-category-modal') %> <%- include('partials/toast')
    %>
    <script src="/js/user-category-management.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Open Add Category Modal
        document
          .getElementById("openAddCategoryBtn")
          ?.addEventListener("click", function () {
            EnhancedModal.show("add-user-category-modal");
          });
        // Close Add Category Modal
        document
          .getElementById("close-add-user-category-modal-btn")
          ?.addEventListener("click", function () {
            EnhancedModal.hide("add-user-category-modal");
          });
        // Open Edit Category Modal (called from JS controller)
        window.openEditUserCategoryModal = function () {
          EnhancedModal.show("edit-user-category-modal");
        };
        // Close Edit Category Modal
        document
          .getElementById("close-edit-user-category-modal-btn")
          ?.addEventListener("click", function () {
            EnhancedModal.hide("edit-user-category-modal");
          });
      });
    </script>
    <%- include('partials/enhanced-modal') %>
  </body>
</html>
